TowerButton[] towerbuttons;
Tower draggedTower;

void setup() {
  fullScreen();
  rectMode(CORNERS);
  
  startUp();
}

void draw() {
  background(255);
  if (towerButton[0].collision() || towerButton[0].dragging) cursor(HAND);
  else cursor(ARROW);
  towerButton[0].display();
  
  if (towerButton[0].dragging) {
    draggedTower = new Tower(mouseX, mouseY);
    draggedTower.display();
  }
}

void mousePressed() {
  if (towerButton[0].collision()) {
    towerButton[0].dragging = true;
  }
}

void mouseReleased() {
  towerButton[0].dragging = false;
}

void startUp() {
  towerButton[0] = new TowerButton(50, 50, 250, 150, "test123", 1);
}
