TowerButton[] towerbuttons;
Tower draggedTower;

void setup() {
  fullScreen();
  rectMode(CORNERS);
  
  startUp();
}

void draw() {
  background(255);
  if (test.collision() || test.dragging) cursor(HAND);
  else cursor(ARROW);
  test.display();
  
  if (test.dragging) {
    draggedTower = new Tower(mouseX, mouseY);
    draggedTower.display();
  }
}

void mousePressed() {
  if (test.collision()) {
    test.dragging = true;
  }
}

void mouseReleased() {
  test.dragging = false;
}

void startUp() {
  test = new TowerButton(50, 50, 250, 150, "test123", 1);
}
