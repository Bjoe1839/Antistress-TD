DragButton test;
Tower draggedTower;

void setup() {
  fullScreen();
  rectMode(CORNERS);
  test = new DragButton(50, 50, 250, 150, "test123");
}

void draw() {
  background(0);
  if (test.collision()) cursor(HAND);
  else cursor(ARROW);
  test.display();
  
  if (test.dragging) {
    draggedTower = new Tower(mouseX, mouseY);
    draggedTower.display();
  }
}

void mousePressed() {
  if (test.collision()) {
    test.dragging = true;
  }
}

void mouseReleased() {
  
}
