TowerButton[] towerButtons = new TowerButton[5];
Tower draggedTower;

void setup() {
  fullScreen();
  rectMode(CORNERS);
  
  startUp();
}

void draw() {
  background(255);
  if (towerButtons[0].collision() || towerButtons[0].dragging) cursor(HAND);
  else cursor(ARROW);
  towerButtons[0].display();
  
  if (towerButtons[0].dragging) {
    draggedTower = new Tower(mouseX, mouseY);
    draggedTower.display();
  }
}

void mousePressed() {
  if (towerButtons[0].collision()) {
    towerButtons[0].dragging = true;
  }
}

void mouseReleased() {
  towerButtons[0].dragging = false;
}

void startUp() {
  for (int i = 0; i < towerButtons.length; i++) {
  towerButtons[0] = new TowerButton(int(width*0.15), int(height*0.89), int(width*0.22), int(height*0.94), "test123", 1);
  }
}
